{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "language": "ts",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      },
      {
        "include": "static/**/*",
        "watchAssets": true
      }
    ],
    "watchAssets": true,
    "manualRestart": true
  }
}
